{
  "info": {
    "name": "Vora API",
    "description": "OAuth2 Authentication Platform API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/health",
          "host": ["{{baseUrl}}"],
          "path": ["health"]
        },
        "description": "Check if the server is running"
      }
    },
    {
      "name": "API Info",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api",
          "host": ["{{baseUrl}}"],
          "path": ["api"]
        }
      }
    },
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Google Login",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/auth/google",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "google"]
            },
            "description": "Initiate Google OAuth flow (redirects to Google)"
          }
        },
        {
          "name": "Facebook Login",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/auth/facebook",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "facebook"]
            },
            "description": "Initiate Facebook OAuth flow (redirects to Facebook)"
          }
        },
        {
          "name": "Logout",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/auth/logout",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "logout"]
            },
            "description": "Logout current session (requires authentication)"
          }
        },
        {
          "name": "Unlink Google",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/auth/unlink/google",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "unlink", "google"]
            },
            "description": "Unlink Google account (requires authentication)"
          }
        },
        {
          "name": "Unlink Facebook",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/auth/unlink/facebook",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "unlink", "facebook"]
            },
            "description": "Unlink Facebook account (requires authentication)"
          }
        }
      ]
    },
    {
      "name": "User",
      "item": [
        {
          "name": "Get Current User",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/user/me",
              "host": ["{{baseUrl}}"],
              "path": ["api", "user", "me"]
            },
            "description": "Get current user profile (requires authentication)"
          }
        },
        {
          "name": "Update Profile",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Updated Name\",\n  \"avatar\": \"https://example.com/avatar.jpg\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/user/me",
              "host": ["{{baseUrl}}"],
              "path": ["api", "user", "me"]
            },
            "description": "Update user profile (requires authentication)"
          }
        },
        {
          "name": "Get Sessions",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/user/sessions",
              "host": ["{{baseUrl}}"],
              "path": ["api", "user", "sessions"]
            },
            "description": "Get all active sessions (requires authentication)"
          }
        },
        {
          "name": "Revoke Session",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/user/sessions/:sessionId",
              "host": ["{{baseUrl}}"],
              "path": ["api", "user", "sessions", ":sessionId"],
              "variable": [
                {
                  "key": "sessionId",
                  "value": "session-id-here"
                }
              ]
            },
            "description": "Revoke a specific session (requires authentication)"
          }
        },
        {
          "name": "Revoke All Sessions",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/user/sessions/revoke-all",
              "host": ["{{baseUrl}}"],
              "path": ["api", "user", "sessions", "revoke-all"]
            },
            "description": "Revoke all sessions except current (requires authentication)"
          }
        },
        {
          "name": "Delete Account",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/user/me",
              "host": ["{{baseUrl}}"],
              "path": ["api", "user", "me"]
            },
            "description": "Delete user account (requires authentication)"
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:5001",
      "type": "string"
    }
  ]
}
