# ===========================
# Server Configuration
# ===========================
NODE_ENV=production
PORT=5001

# ===========================
# Database
# ===========================
# Get your MongoDB connection string from MongoDB Atlas
# Format: mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<database>?retryWrites=true&w=majority
MONGODB_URI=your_mongodb_connection_string_here

# ===========================
# JWT Configuration
# ===========================
# Generate a secure random string (at least 32 characters)
# You can use: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ===========================
# Frontend Configuration
# ===========================
# PRODUCTION - Replace with your actual Vercel frontend URL
FRONTEND_URL=https://your-frontend-app.vercel.app
FRONTEND_LOGIN_SUCCESS_REDIRECT=/callback?success=true
# Note: Don't add ?error= here, it will be added dynamically
FRONTEND_LOGIN_FAILURE_REDIRECT=/callback

# ===========================
# Google OAuth2
# ===========================
# Get these from Google Cloud Console: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
# PRODUCTION - Replace with your actual Vercel backend URL
GOOGLE_CALLBACK_URL=https://your-backend-app.vercel.app/api/auth/callback/google

# ===========================
# Facebook OAuth2
# ===========================
# Get these from Facebook Developers: https://developers.facebook.com/
FACEBOOK_APP_ID=your_facebook_app_id_here
FACEBOOK_APP_SECRET=your_facebook_app_secret_here
# PRODUCTION - Replace with your actual Vercel backend URL
FACEBOOK_CALLBACK_URL=https://your-backend-app.vercel.app/api/auth/callback/facebook

# ===========================
# Rate Limiting
# ===========================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_AUTH_MAX=5

# ===========================
# Session Configuration
# ===========================
MAX_ACTIVE_SESSIONS=10

# ===========================
# Logging
# ===========================
LOG_LEVEL=info
LOG_FORMAT=json
